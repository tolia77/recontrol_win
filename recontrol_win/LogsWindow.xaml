<Window x:Class="recontrol_win.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logs" Height="400" Width="640" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Logs" FontWeight="Bold" FontSize="16"/>
            <Button Content="Clear" Margin="10,0,0,0" Click="Clear_Click"/>
        </StackPanel>

        <ListBox x:Name="LogList" Grid.Row="1"/>
    </Grid>
</Window>
