<Window x:Class="recontrol_win.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="220" Width="360" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}"/>

        <StackPanel Grid.Row="1" Margin="0,12,0,12">
            <CheckBox x:Name="AutostartCheck" Content="Start ReControl when Windows starts" Foreground="{DynamicResource TextBrush}"/>
            <Separator Margin="0,10,0,10" Background="{DynamicResource LightGrayBrush}"/>
            <Button x:Name="LogoutButton" Content="Logout" Click="LogoutButton_Click" Style="{DynamicResource PrimaryButton}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Close" Width="80" IsDefault="True" Click="Close_Click" Style="{DynamicResource PrimaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
