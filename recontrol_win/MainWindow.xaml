<Window x:Class="recontrol_win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReControl" Height="360" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">
    <!-- Remove duplicated resources; now using App.xaml global resources -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Welcome to ReControl" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
            <TextBlock Text="Connection status:" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
            <TextBlock x:Name="StatusText" Text="Disconnected" FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
            <ProgressBar x:Name="ConnectingSpinner" Width="100" Height="6" Margin="12,0,0,0" IsIndeterminate="True" Foreground="{DynamicResource SecondaryBrush}" Visibility="Collapsed"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
            <Button x:Name="SettingsButton" Content="Settings" Width="100" Margin="0,0,10,0" Click="SettingsButton_Click" Style="{DynamicResource PrimaryButton}" Height="25"/>
            <Button x:Name="LogsButton" Content="View Logs" Width="100" Click="LogsButton_Click" Style="{DynamicResource SecondaryButton}"/>
        </StackPanel>

        <TextBlock Grid.Row="3" TextWrapping="Wrap" Opacity="0.85" Margin="0,16,0,0" Foreground="{DynamicResource DarkGrayBrush}">
            Use the Settings button to configure startup options. Use View Logs to see recent events.
        </TextBlock>
    </Grid>
</Window>
