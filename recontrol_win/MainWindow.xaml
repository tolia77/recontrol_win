<Window x:Class="recontrol_win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReControl" Height="360" Width="520"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Welcome to ReControl" FontSize="22" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0">
            <TextBlock Text="Connection status: " VerticalAlignment="Center"/>
            <TextBlock x:Name="StatusText" Text="Disconnected" FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
            <Button x:Name="SettingsButton" Content="Settings" Width="100" Margin="0,0,10,0" Click="SettingsButton_Click"/>
            <Button x:Name="LogsButton" Content="View Logs" Width="100" Click="LogsButton_Click"/>
        </StackPanel>

        <TextBlock Grid.Row="3" TextWrapping="Wrap" Opacity="0.6" Margin="0,16,0,0">
            Use the Settings button to configure startup options. Use View Logs to see recent events.
        </TextBlock>
    </Grid>
</Window>
